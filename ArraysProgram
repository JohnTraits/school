using System;

namespace ArraysMay2020
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("How many students would you like to input?");
            int tempStudents = Convert.ToInt32(Console.ReadLine());
            string[] studentsNames = new string[tempStudents];
            string[] studentsGrades = new string[tempStudents];
            for (int i = 0; i < tempStudents; i++)
            {
                Console.WriteLine("Input name");
                studentsNames[i] = Console.ReadLine();
                Console.WriteLine("Input Grade");
                studentsGrades[i] = Console.ReadLine();
            }
            Console.Clear();
            Console.WriteLine("Students");
            //Found this last part on google to help
            for (int index = 0; index < tempStudents; index++)
            {
                Console.WriteLine(studentsNames[index] + '\t' + studentsGrades[index]);
            }
        }
    }
}
