using System;
using System.Collections.Generic;
using System.Linq;

namespace ArraysProgramCompSci
{
    class Program
    {
        static void Main(string[] args)
        {
            List<string> studentName = new List<string>();
            List<int> studentGrade = new List<int>();
        Start:
            Console.WriteLine("Please select an option.");
            Console.WriteLine("1. Enter a student.");
            Console.WriteLine("2. Print a student grade.");
            Console.WriteLine("3. Change a student grade.");
            Console.WriteLine("4. Print class average.");
            Console.WriteLine("5. Print class list.");
            for (int option = Convert.ToInt32(Console.ReadLine()); option <= 5; option++)
            {
                if (option == 1)
                {
                    goto optionOne;
                }
                if (option == 2)
                {
                    goto optionTwo;
                }
                if (option == 3)
                {
                    goto optionThree;
                }
                if (option == 4)
                {
                    goto optionFour;
                }
                if (option == 5)
                {
                    goto optionFive;
                }
            }
            Console.WriteLine("Invalid Selection. Please select 1-5. Press a key to continue.");
            Console.ReadKey();
            Console.Clear();
            goto Start;
        optionOne:
            Console.Clear();
            Console.WriteLine("Please input student name.");
            studentName.Add(Console.ReadLine());
            Console.WriteLine("Please input student grade.");
            studentGrade.Add(Convert.ToInt32(Console.ReadLine()));
            Console.Clear();
            goto Start;
        optionTwo:
            Console.Clear();
            Console.WriteLine("Please type number of student.");
            for (int index = 0; index < studentName.Count; index++)
            {
                Console.WriteLine(studentName[index]);
            }
            int tempStudentNum = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine(studentName[tempStudentNum - 1] + " has a grade of " + studentGrade[tempStudentNum - 1]);
            Console.WriteLine("Press any key to continue");
            Console.ReadKey();
            Console.Clear();
            goto Start;
        optionThree:
            Console.Clear();
            Console.WriteLine("Please type number of student.");
            for (int index = 0; index < studentName.Count; index++)
            {
                Console.WriteLine(studentName[index]);
            }
            int tempStudentNum1 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("What is " + studentName[tempStudentNum1 - 1] + "'s new grade?");
            int tempNewGrade = Convert.ToInt32(Console.ReadLine());
            studentGrade[tempStudentNum1 - 1] = tempNewGrade;
            Console.WriteLine("Press any key to continue");
            Console.ReadKey();
            Console.Clear();
            goto Start;
        optionFour:
            Console.WriteLine("The average of the class is " + (studentGrade.Sum() / (studentGrade.Count)));
            Console.WriteLine("Press any key to continue");
            Console.ReadKey();
            Console.Clear();
            goto Start;
        optionFive:
            int tempStudentsCount = studentGrade.Count();
            for (int index = 0; index < tempStudentsCount; index++)
            {
                Console.WriteLine(studentName[index] + '\t' + studentGrade[index]);
            }
            Console.WriteLine("Press any key to continue");
            Console.ReadKey();
            Console.Clear();
            goto Start;
            ;
        }
    }
}
